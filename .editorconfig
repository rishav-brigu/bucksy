# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Indentation override for all JS family files
[*.{js,jsx,ts,tsx,vue}]
indent_style = space
indent_size = 2

# Indentation override for HTML files
[*.{html,htm}]
indent_style = space
indent_size = 2

# Indentation override for CSS files
[*.{css,scss,sass,less}]
indent_style = space
indent_size = 2

# Indentation override for JSON files
[*.json]
indent_style = space
indent_size = 2

# Indentation override for YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Indentation override for Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Indentation override for Python files
[*.py]
indent_style = space
indent_size = 4

# Indentation override for configuration files
[*.{ini,cfg,conf}]
indent_style = space
indent_size = 4
